<h2>Forgot your password?</h2>

<section class="hero is-medium">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title has-text-grey">Forgot your password?</h3>
        <div class="box">
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>

            <div class="field">
              <div class="control">
                <%= f.input_field :email, required: true, placeholder: 'Email Address', autofocus: true, class: 'input', input_html: { autocomplete: "email" } %>
              </div>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Send me reset password instructions", class: 'button custom-is-primary is-fullwidth' %>
            </div>
          <% end %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
