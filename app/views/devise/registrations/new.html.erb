<section class="hero is-fullheight">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="column is-4 is-offset-4">
        <h3 class="title has-text-grey">Register</h3>
        <p class="subtitle has-text-grey">Please login to proceed.</p>
        <div class="box">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>

            <div class="field mt-16">
              <p class="help has-text-black">Avatar Preview</p>
              <figure class="image is-96x96 mb-16 border-1 ml-auto mr-auto">
                <img id="img-prev" src="#" class="is-invisible" />
              </figure>
              <div class="file flex-center mb-32">
                <label class="file-label">
                  <%= f.file_field :avatar, class: 'file-input', id: 'image-upload' %>
                  <span class="file-cta">
                    <span class="file-icon">
                      <%= icon( 'fas', 'upload' ) %>
                    </span>
                    <span class="file-label">
                      Upload Avatar
                    </span>
                  </span>
                </label>
              </div>

              <%= f.hidden_field :avatar_cache %>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input_field :username, placeholder: 'Username', required: true, autofocus: true, class: 'input' %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input_field :email, placeholder: 'Email Address', required: true, autofocus: true, class: 'input', input_html: { autocomplete: "email" }%>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input_field :password, placeholder: 'Password', required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: 'input', input_html: { autocomplete: "new-password" } %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input_field :password_confirmation, placeholder: 'Password Confirmation', required: true, class: 'input', input_html: { autocomplete: "new-password" } %>
              </div>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Register", class: 'button custom-is-primary is-fullwidth' %>
            </div>
          <% end %>
        </div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>
